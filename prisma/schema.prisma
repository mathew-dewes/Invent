
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  vendors       Vendor[]
  stock         Stock[]
  requests      Request[]
  purchases Purchase[]
  costLedger CostLedger[]
  costCentres CostCentre[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Vendor {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  name        String
  address     String?
  phone       String?
  email       String
  contactName String
  userId      String
  PONumber Int
  stock       Stock[]
  purchase    Purchase[]
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  ledger CostLedger[]

  @@unique([userId, name])
  @@unique([userId, PONumber])
}

model Stock {
  id           String     @id @default(cuid())
  createdAt    DateTime   @default(now())
  name         String
  quantity     Int
  partNumber   String
  location     String
  vendorId     String
  userId       String
  vendor       Vendor     @relation(fields: [vendorId], references: [id])
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  brand        String
  unitCost     Decimal    @db.Decimal(10, 2)
  reorderPoint Int
  requests     Request[]
  purchases    Purchase[]
  costLedger CostLedger[]

  @@unique([userId, id])
}

model Request {
  id            String        @id @default(cuid())
  createdAt     DateTime      @default(now())
  completedAt DateTime?
  customer      String
  requestNumber Int
  quantity      Int
  status        RequestStatus
  note          String?
  stockItem     Stock         @relation(fields: [stockId], references: [id])
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  stockId       String
  userId        String

  costCentreId String

  costCentre CostCentre @relation(fields: [costCentreId], references: [id])

  @@unique([userId, requestNumber])
  
}

model Purchase {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())
  completedAt DateTime?
  purchaseNumber Int
  status PurchaseStatus
  notes String?

  stockId  String
  quantity Int
  totalCost Decimal    @db.Decimal(10, 2)
  userId String
  vendorId String

  vendor Vendor @relation(fields: [vendorId], references: [id])
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  stockItem Stock  @relation(fields: [stockId], references: [id])

  @@unique([purchaseNumber, userId])


}

model CostLedger {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())
  sourceType FinanceType

  sourceId String
  reference String

  stockId String
  stockName String

  vendorId String?
  vendorName String?

  costCentreId String?
  customerName String?

  costCentreName String?
  costCentre CostCentre? @relation(fields: [costCentreId], references: [id])

  userId String


  quantity Int
  unitCost Decimal    @db.Decimal(10, 2)
  totalCost Decimal    @db.Decimal(10, 2)

  month Int
  year Int

  vendor Vendor? @relation(fields: [vendorId], references: [id])
  user User @relation(fields: [userId], references: [id], onDelete: Cascade) 
  stock Stock @relation(fields: [stockId], references: [id])


}


model CostCentre {
  id String @id @default(cuid())
  code String
  name String
  userId String
  createdAt DateTime @default(now())
  user User @relation(fields: [userId], references: [id], onDelete: Cascade) 

  requests Request[]
  ledger CostLedger[]

  @@unique([code, userId])
}



enum RequestStatus {
  PENDING
  READY
  COMPLETE
}

enum PurchaseStatus {
  PLACED
  RECEIVED
}

enum FinanceType {
  REQUEST
  PURCHASE
}
